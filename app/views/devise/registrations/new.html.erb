<div class=" d-flex justify-content-center align-items-center vh-50">
  <div class="col-12 text-center bg-off-white p-5 rounded shadow-lg" style="width: 400px;">
    <h2>Cadastrar</h2>

    <div class="mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group mb-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Senha (6 caracteres no mÃ­n.)" %>
        </div>

        <div class="form-group mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme a senha" %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar", class: "btn btn-danger w-100 mb-2" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
